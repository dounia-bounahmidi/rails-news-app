<div class="signin-wrapper">
  <div class="signin-inner">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, :placeholder => 'email adress', :class => 'text-input' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", :placeholder => 'password', :class => 'text-input' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", :id => 'action' %>
      </div>
    <% end %>
 </div>
</div>